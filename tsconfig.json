{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "nearly-components": ["components"],
      "nearly-constants": ["constants"],
      "nearly-utilities": ["utilities"],
      "nearly-contexts": ["contexts"],
      "nearly-services": ["services"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    ".eslintrc.js"
  ]
}
